{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "sourceMap": false,
    "outDir": "./dist",
    "strict": false,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "build",
    "node_modules",
    "test"
  ]
}